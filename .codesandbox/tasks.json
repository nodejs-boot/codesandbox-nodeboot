{
  "setupTasks": [
    {
      "command": "pnpm install",
      "name": "Install Dependencies"
    }
  ],

  "tasks": {
    "dev": {
      "name": "Start Dev Server (Swagger UI)",
      "command": "pnpm dev",
      "runAtStart": true,
      "preview": {
        "port": 3000,
        "open": true,
        "url": "http://localhost:3000/api-docs"
      },
      "restartOn": {
        "files": ["./pnpm-lock.yaml"],
        "branch": false,
        "clone": false,
        "resume": false
      }
    },

    "preview-openapi-json": {
      "name": "Preview: OpenAPI JSON",
      "command": "pnpm dev",
      "preview": {
        "port": 3000,
        "open": true,
        "url": "http://localhost:3000/api-docs/swagger.json"
      }
    },
    "preview-actuator": {
      "name": "Preview: Actuator",
      "command": "pnpm dev",
      "preview": {
        "port": 3000,
        "open": true,
        "url": "http://localhost:3000/actuator"
      }
    },
    "preview-sample": {
      "name": "Preview: API Sample (Users)",
      "command": "pnpm dev",
      "preview": {
        "port": 3000,
        "open": true,
        "url": "http://localhost:3000/api/v1/users/"
      }
    },

    "start-app": {
      "name": "Start App",
      "command": "pnpm start"
    },
    "start-prod": {
      "name": "Start Production",
      "command": "pnpm start:prod"
    },
    "build": {
      "name": "Build",
      "command": "pnpm build"
    },
    "lint": {
      "name": "Lint",
      "command": "pnpm lint"
    },
    "test": {
      "name": "Run Tests",
      "command": "pnpm test"
    },
    "install": {
      "name": "Install Dependencies",
      "command": "pnpm install",
      "restartOn": {
        "files": ["./package.json"],
        "branch": false,
        "clone": false,
        "resume": false
      }
    }
  }
}
